{
  "ConnectionStrings": {
    "Database": "Server=localhost;Port=5432;Database=ecommercedb;User Id=postgres;Password=admin;Include Error Detail=true",
    "redis": "localhost:6379"
  },

  "MessageBroker": {
    "Host": "amqp://localhost:5672",
    "Username": "guest",
    "Password": "guest"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "Ecommerce Application",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*"
}
